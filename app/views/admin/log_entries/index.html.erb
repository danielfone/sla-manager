<h2>
  Log Entries
  <%= link_to 'Add Entry', new_admin_log_entry_path, class: 'action' %>
</h2>

<%- if @entries.any? -%>
<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Client</th>
      <th>Application</th>
      <th>Type</th>
      <th>Note</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.order('completed_at').each do |entry| %>
      <tr>
        <td><%= link_to entry.completed_at, edit_admin_log_entry_path(entry) %></td>
        <td><%= entry.client_name %></td>
        <td><%= entry.application_name %></td>
        <td><%= entry.entry_type.humanize %></td>
        <td><%= entry.note %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%- else -%>
  <p class="alert alert-info">No entries found.</p>
<%- end -%>